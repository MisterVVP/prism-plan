{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client"],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@reducers/*": ["reducers/*"],
      "@utils/*": ["utils/*"],
      "@modules/*": ["modules/*"],
      "@modules": ["modules/index"],
      "@components": ["components/index"],
      "@hooks": ["hooks/index"],
      "@reducers": ["reducers/index"],
      "@utils": ["utils/index"]
    }
  },
  "include": ["src"]
}
